<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
    <% if product.reviews.average(:rating) == nil%>
    <p> </p>
    <% else %>
    <p>Average Star Rating:
    <% product.reviews.average(:rating).to_i.times do |star| %>
      ⭐️
      <% end %>
    <% end %>
    </p>
  </p>
  <footer class="actions">
    <%= link_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary', method: :put do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  <% if product.sold_out? %>
    <aside class="sold-out">
      SOLD OUT!
    </aside>
  <% elsif product.few_left? %>
    <aside class="few-left">
      Only <%= product.quantity %> left!
    </aside>
  <% end %>

  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>

</article>
